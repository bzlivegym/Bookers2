<div class="container px-5 px-sm-0">
<%= render 'books/error', model: @book %>
<div class="row">
<div class="col-md-3">
<%= render 'users/users', user: @user %>
<h2 class="mt-3">New book</h2>
<%= form_with model: @book, url: books_path, local: true do |f| %>
<div>
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :Opinion %>
  <%= f.text_area :body %>
</div>

<div>
  <%= f.submit "Create Book",class:"btn btn-success col-xs-10 col-xs-offset-1"  %>
</div>
<% end %>
</div>
<div class="col-md8 offset-md-1">
  <h2>Users</h2>
  <table class="table table-sm user-index">
  <thead>
    <tr>
   <th>image</th>
   <th>name</th>
   <th colspan="3"></th>
   </tr>
 </thead>

 <tbody>
   <% @users.each do |user| %>
   <tr>
     <td>
       <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
       </td>
     <td><%= user.name %></td>
     <td><%= link_to "Show", user_path(user.id), class:"users_#{user.id}" %></td>
   </tr>
   <% end %>
 </tbody>
</table>


