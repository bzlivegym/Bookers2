<%= notice %>
<%= render 'users/users', user: @user %>
<h2>New book</h2>


<table>
  <h2>Books</h2>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
   <% @books.each do |book| %>
   <tr>
   <td><%= attachment_image_tag user, :profile_image_id, :fill, 50, 50, fallback: "no_image.jpg" %></td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= body.body %></td>
   </tr>
   <% end %>
  </tbody>

</table>