<div class="container">
  <div class="row">
<%= render 'books/error', model: @book %>
 <div class="col-xs-3">
<%= render 'users/users', user: @user %>
<h2>New Book</h2>
<%= form_with model: @book, url: books_path, local: true do |f| %>
<div>
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :Opinion %>
  <%= f.text_area :body %>
</div>

<div>
  <%= f.submit "Create Book",class:"btn btn-success col-xs-10 col-xs-offset-1"  %>
</div>
<% end %>
</div>
<div class="col-xs-9">
<table class="table book-index">
  <h2>Books</h2>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
  </thead>
  <tbody>
   <% @books.each do |book| %>
   <tr>
   <td>
     <%= link_to book_path(book.id) do %>
     <%= attachment_image_tag @user, :profile_image, :fill, 50, 50, fallback: "no_image.jpg" %>
     <% end %>
     </td>
   <td><%= link_to book.title, book_path(book.id) %></td>
   <td><%= book.body %></td>
   </tr>
   <% end %>
  </tbody>

</table>