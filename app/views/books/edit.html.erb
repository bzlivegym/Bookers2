<div class="row">
  <div class="col-xs-offset-3 col-xs-6">
<h1>Editing Book</h1>
<%= render 'books/error', model: @book %>
<%= form_with model: @book, local: true do |f| %>
<div>
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>

<div>
  <%= f.label :Opinion %>
  <%= f.text_area :body %>
</div>

<div>
  <%= f.submit "Update Book", class:"btn btn-success col-xs-10 col-xs-offset-1" %>
</div>
<% end %>

<div>
  <%= link_to "Show", book_path(@book) %>
  |
  <%= link_to "Back", books_path %>
</div>
</div>
  <div class="col-xs-3"></div>
</div>
