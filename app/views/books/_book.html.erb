<%= form_with model:book, url: books_path, local: true do |f| %>
<div class="form-group">
  <%= f.label :Title %>
  <%= f.text_field :title %>
</div>

<div class="form-group">
  <%= f.label :Opinion %>
  <%= f.text_area :body %>
</div>

<div class="form-group">
  <%= f.submit "Create Book", class:"btn btn-success"  %>
</div>
<% end %>